<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agenda</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header>
      <h1>Agenda de Consultas</h1>
    </header>
    <main>
      <table border="1">
        <thead>
          <tr>
            <th>Paciente</th>
            <th>Médico</th>
            <th>Data</th>
            <th>Horário</th>
          </tr>
        </thead>
        <tbody>
          <% query.forEach(agendamento => { %>
          <tr>
            <td><%= agendamento.paciente %></td>
            <td><%= agendamento.medico %></td>
            <td><%= agendamento.dataConsulta %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </main>
  </body>
</html>
